@page
@model ServiceHost.Pages.Blog.IndexModel
@{
    ViewData["Title"] = "وبلاگ";
}
<!-- blog---------------------------------->
<main class="main-row mb-2 mt-2">
    <div class="container-main">
        <div class="d-block">
            <div class="col-lg-9 col-md-8 col-xs-12 pr mt-3">
                @foreach (var article in Model.Articles)
                {
                    <section class="content-widget">
                        <article class="post-item">
                            <div class="post-thumb">
                                <a asp-page="/Blog/Article" asp-route-id="@article.Slug" class="d-block">
                                    <img src="~/ProductPictures/@article.Picture" alt="@article.PictureAlt" title="@article.PictureTitle">
                                </a>
                            </div>
                            <div class="post-content">
                                <div class="title">
                                    <a asp-page="/Blog/Article" asp-route-id="@article.Slug">
                                        <h2 class="title-tag">@article.Title</h2>
                                    </a>
                                </div>
                                <div class="excerpt">@article.ShortDescription</div>
                                <span class="post-date">
                                    <i class="fa fa-calendar"></i>
                                    @article.PublishDate
                                </span>
                            </div>
                        </article>
                    </section>
                }
            </div>
            <div class="col-lg-3 col-md-4 col-xs-12 pr mt-3 sticky-sidebar">
                <div class="shortcode-widget-area-sidebar">
                    <section class="widget-posts">
                        <div class="header-sidebar mb-3">
                            <h3>جدیدترین نوشته ها</h3>
                        </div>
                        <div class="content-sidebar">
                            @await Component.InvokeAsync("LatestArticles")

                        </div>
                    </section>

                </div>
            </div>
            <div class="pagination-product pr-3 pl-3 pr">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">«</span>
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link active" href="#">1</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">...</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">8</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">»</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</main>
<!-- blog---------------------------------->